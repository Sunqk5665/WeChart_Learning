/**index.wxss**/
.shixian{
  position:absolute;
  width:100%;
  height:100%;
  background:#eee;
}
.aside{
  float:left;
  height:100%;
  width:100px;
  padding-bottom:0;
  text-align:center;
  overflow: scroll;
  background:#fff;
}
menu :active
.aside::-webkit-scrollbar{
  width:0;
}
.aside .menu{
  height:40px;
  color:#333;
  font-size:20px;
  line-height:70px;
  margin-top: 40px;/*边距*/
  margin-bottom: 20px;
  background: rgb(255, 255, 255);
  border: 1px solid rgb(236, 225, 225);
  border-radius: 20%;
  box-shadow: 10px 10px 5px #888888;
  /*border-top:1px solid rgb(230, 16, 16);*/
}
.aside .menu.active{
  background: rgb(198, 209, 205);
}
.item-content{
  float:left;
  /* width: 100%; */
  width:calc(100% - 100px);
  height:100%;
}
.item-content .box{
  height:calc(100% - 10px);
  padding:10px 0 0 10px;
  overflow: scroll;
}
.item-content .box.active{
  padding-bottom:80px;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:100px;
  padding:10px 0 10px 10px;
  margin-bottom:10px;
  margin-right: 10px;
  background:rgb(240, 218, 194);
  border-radius: 10px;
}
.item-content .box .item image{
  display:block;
  float:left;
  height:100px;
  width:110px;
  margin-right:10px;
  border-radius: 10px;
}
.item-content .box .item text{
  display:block;
  font-size:16px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  font-weight:bolder;
}
.item-content .box .item .price{
  color:red;
  font-size:18px;
  margin-top:30px;
}
.item-content .box .item .btn{
  display:block;
  float:right;
  margin:-25px 10px 0 0;
  padding:5px 10px;
  font-size:14px;
  color:#fff;
  background:orange;
  border-radius:20px;
}
.item-content .box .item .btn.active{
  background:#ccc;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:80px;
    line-height:80px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
}
.bottom-bar.hidden{
  display:none;
}
.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
    padding-left:10px;
}
.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    font-weight:bolder;
    color:red;
}
.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:20px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:orange;
}